<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:fontFamily">@font/aldrich</item>
        <item name="fontFamily">@font/aldrich</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Customizing the material theme styles -->
        <item name="textAppearanceHeadline6">@style/TitleDefault</item>
    </style>

    <style name="TitleDefault" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LabelTextDiscreteDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorDiscreet</item>
    </style>

    <style name="LabelTextValue">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBalonLeft" parent="TextBalon">
        <item name="android:background">@drawable/ic_text_ballon_left</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_large</item>
    </style>

    <style name="TextBalonRight" parent="TextBalon">
        <item name="android:background">@drawable/ic_text_ballon_right</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_large</item>
    </style>

    <style name="TextBalon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/ic_text_ballon_left</item>
        <item name="android:padding">@dimen/space_padding_xlarge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.App.Dialog.FullScreen"
        parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/primaryColor</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">
            @anim/fade_in
        </item>
        <item name="android:windowExitAnimation">
            @anim/fade_out
        </item>
    </style>

    <style name="AppTheme.PrimaryAccent">
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <!--  Used to set AppBar transparent  -->
    <style name="ActionBar.Transparent" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="displayOptions">showHome|showTitle</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="AppTheme.TransparentActionBar" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--  -->
    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
